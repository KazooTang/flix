<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<% @movies.each do |movie| %>
    <article>
        <h2><%= movie.title %></h2>
        <p>
            <%= truncate(movie.description, length: 40, seperator: ' ') %>
        </p>
        <table>
            <tr>
                <th>Realeased:</th>
                <td><%= movie.released_on %></td>
            </tr>
            <tr>
                <th>Rating:</th>
                <td><%= movie.rating %></td>
            </tr>
            <tr>
                <th>Total Gross:</th>
                <td><%= number_to_currency(movie.total_gross) %></td>
            </tr>
            <tr>
                <th>Realeased:</th>
                <td><%= movie.released_on %></td>
            </tr>
        </table>
    </article>
<% end %>
